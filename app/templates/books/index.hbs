<Shared::Header @text={{t 'books.title' }} />

<div class="app-books-index">
    <div class="app-books-index-toolbar row g-3 p-3 justify-content-between">
        <div class="col-auto">
            <Input id="app-books-index-query" class="form-control me-2" @type="search" placeholder={{t 'books.index.search' }} @value={{this.query}}></Input>
        </div>
    </div>

    <Shared::GridFilter @entities={{@model}} @attr="title" @query={{this.query}} as |results|>
        <Shared::SimpleWrapGrid class="books-grid">
            {{#each results as |b|}}
                <div class="p-3">
                    <BookCard @book={{b}} @showAuthorLink={{true}} />
                </div>
            {{else}}
                <div class="p-3">
                    {{#if this.query}}
                        <p class="h5 no-query-matches">{{t 'books.index.searchNoMathces' phrase=this.query htmlSafe=true}}</p>
                    {{else}}
                        <p class="h5 no-records">{{t 'books.index.empty'}}</p>
                    {{/if}}
                </div>
            {{/each}}
        </Shared::SimpleWrapGrid>
    </Shared::GridFilter>
</div>